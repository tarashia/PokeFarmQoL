{
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "plugins": [
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "camelcase": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "prefer-const": [
            "error"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "multiline-comment-style": [
          "error",
          "starred-block"
        ],
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": { "multiline": true, "minProperties": 1 },
                "ObjectPattern": { "multiline": true },
                "ImportDeclaration": "never",
                "ExportDeclaration": { "multiline": true, "minProperties": 3 }
            }
        ]
    }
}